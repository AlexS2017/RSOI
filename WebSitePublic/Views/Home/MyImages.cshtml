
@model Common.ServiceMessages.GetHomeImageMsg
@{
    ViewData["Title"] = "MyImages";
}

<h2>Your recent images</h2>

<div class="row">

    @foreach (Guid item in Model.ImageList)
    {
        <div class="col-md-3">
            <a href="/Home/ImagePage/@item">
                <img height="130" src="/Home/ViewImage/@item" />
            </a>
        </div>
    }


</div>

<form asp-action="UploadImg" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">

        <div class="col-md-6">
            <input asp-for="HashTag" type="hidden" />
            <h2>Upload your image</h2>
            <div>Upload your file</div>
            <input required type="file" id="myuplfile" name="myuplfile" class="form-control" />
            <div>Title</div>
            <input required asp-for="ImageTitle" class="form-control" />
            <div>Description</div>
            <input required asp-for="Description" class="form-control" />
            <br /><input type="submit" class="btn btn-default" value="Upload" />
        </div>
        <div class="col-md-6">
            @*<h2>See and post your comment</h2>
            <div></div>
            <div>Write your comment here</div>
            <input type="text" name="imgcomment" value="" class="form-control" />
            <br /><input type="button" name="imgcommentsend" value="Send" class="btn btn-default" />*@
        </div>

    </div>
</form>


