@model Common.ServiceMessages.AddImageMsg

@{
    ViewData["Title"] = "Home Page";
}
<h2>Your recent images</h2>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/image.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    title 1
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/image1.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    title 2
                   
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/image2.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    title 3
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/image3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    title 44
                    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<form asp-action="UploadImg" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">

        <div class="col-md-6">
            <input asp-for="HashTag" type="hidden"/>
            <h2>Upload your image</h2>
            <div>Upload your file</div>
            <input type="file" id="myuplfile" name="myuplfile" class="form-control" />
            <div>Title</div>
            <input asp-for="ImageTitle" name="imgtitle" value="" class="form-control" />
            <div>Description</div>
            <input asp-for="Description" name="imgdescr" value="" class="form-control" />
            <br /><input type="submit" class="btn btn-default" name="imguploadbtn" value="Upload" />
        </div>
        <div class="col-md-6">
            <h2>See and post your comment</h2>
            <div></div>
            <div>Write your comment here</div>
            <input type="text" name="imgcomment" value="" class="form-control" />
            <br /><input type="button" name="imgcommentsend" value="Send" class="btn btn-default" />
        </div>

    </div>
</form>
